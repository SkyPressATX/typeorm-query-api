{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true
  },
  "exclude": ["dist/**/*", "node_modules"],
  "include": ["src/**/*"]
}
